<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="handler"
            type="fitnessapp.workout.homeworkout.stretching.ReminderActivity.ClickHandler" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#99000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="@dimen/_25sdp"
            android:paddingEnd="@dimen/_25sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pro_white" />

            <fitnessapp.workout.homeworkout.view.CBTextView
                style="@style/txt_fff_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="@string/unlock_training"
                android:textAllCaps="true" />

            <fitnessapp.workout.homeworkout.view.CTextView
                style="@style/txt_fff_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:gravity="center"
                android:text="@string/start_the_free_trail_to_unlock_all_training_plans" />

            <LinearLayout
                android:id="@+id/llFreeTrial"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/btn_bg_round_gradiant"
                android:gravity="center">

                <fitnessapp.workout.homeworkout.view.CBTextView
                    style="@style/txt_fff_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_pro_black"
                    android:drawablePadding="@dimen/_7sdp"
                    android:gravity="center"
                    android:drawableTint="@color/white"
                    android:text="Free 7 Days Trial "
                    android:textAllCaps="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWatchVideo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/btn_bg_round_gradiant"
                android:backgroundTint="#000000"
                android:gravity="center">

                <fitnessapp.workout.homeworkout.view.CBTextView
                    style="@style/txt_fff_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_play_circle_filled"
                    android:drawablePadding="@dimen/_7sdp"
                    android:drawableTint="@color/white"
                    android:gravity="center"
                    android:text="Watch Video"
                    android:textAllCaps="true" />

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/td_btn_back"
            android:tint="@color/white"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:padding="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>