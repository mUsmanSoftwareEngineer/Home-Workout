<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="handler"
            type="fitnessapp.workout.homeworkout.stretching.PauseBeforeStartActivity.ClickHandler" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="@{(v)->handler.onStartClick()}">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/splash_screen"
                android:scaleType="centerCrop"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_exercise_start"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(v)->handler.onExerciseInfoClick()}"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">

                <fitnessapp.workout.homeworkout.view.CTextView
                    android:id="@+id/tvTotalEx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_666_12"
                    android:layout_marginBottom="@dimen/_3sdp"
                    tools:text="NEXT 1/10"/>

                <fitnessapp.workout.homeworkout.view.CMTextView
                    android:id="@+id/tvName"
                    style="@style/txt_333_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Bridge" />

                <fitnessapp.workout.homeworkout.view.CTextView
                    android:id="@+id/tvTime"
                    style="@style/txt_666_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="00:20" />

            </LinearLayout>

            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_60sdp" />

        </LinearLayout>

    </LinearLayout>

</layout>